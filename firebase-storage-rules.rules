// Firebase Storage Security Rules for Creadevents
// Copy these rules to your Firebase Console -> Storage -> Rules

rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all images
    match /images/{allPaths=**} {
      allow read: if true;
      allow write: if true; // For now, allow all writes. You can restrict this later.
    }
    
    // Specific rules for different image categories
    match /images/thumbnails/{fileName} {
      allow read: if true;
      allow write: if true;
    }
    
    match /images/{category}/{fileName} {
      allow read: if true;
      allow write: if true;
    }
    
    // Default rule for other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}