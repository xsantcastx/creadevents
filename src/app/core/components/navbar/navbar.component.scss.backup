// Navbar specific styles
.navbar-backdrop {
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
}

// Shared surface treatment for dropdown panels
.menu-surface {
  background-color: var(--bg-elevated) !important;
  border: 1px solid var(--border);
  backdrop-filter: none;
  -webkit-backdrop-filter: none;
  color: var(--text);
}

// Compact icon buttons for navbar utilities
.nav-icon-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 2.5rem;
  height: 2.5rem;
  border-radius: 0.9rem;
  transition: all 0.2s ease;
  border: 1px solid transparent;
}

.nav-icon-btn--dark {
  background: #1f2937;
  border-color: color-mix(in srgb, #1f2937 40%, #f8fafc);
  color: #fff;
}

.nav-icon-btn--dark:hover {
  background: #223042;
}

.nav-icon-btn--light {
  background: #ffffff;
  border-color: color-mix(in srgb, #111827 12%, transparent);
  color: #111827;
  box-shadow: 0 18px 32px -22px rgba(17, 24, 39, 0.35);
}

.nav-icon-btn--light:hover {
  background: #f9fafb;
}

.nav-divider {
  display: inline-block;
  width: 1px;
  height: 1.5rem;
  border-radius: 9999px;
  transition: background-color 0.2s ease;
}

.nav-divider--dark {
  background-color: color-mix(in srgb, #ffffff 28%, transparent);
}

.nav-divider--light {
  background-color: color-mix(in srgb, #111827 15%, transparent);
}

.mega-panel {
  background: var(--bg-elevated);
  border: 1px solid var(--border);
  box-shadow: 0 32px 60px -26px rgba(17, 24, 39, 0.35);
  color: var(--text);
  overflow: hidden;
}

.mega-panel h4 {
  color: var(--primary);
}

.mega-panel p {
  color: var(--muted);
}

.mega-link {
  display: block;
  padding: 0.45rem 0.55rem;
  border-radius: 0.75rem;
  font-weight: 600;
  color: var(--text);
  transition: background-color 0.2s ease, color 0.2s ease, transform 0.2s ease;
}

.mega-link:hover {
  background-color: color-mix(in srgb, var(--text) 8%, var(--bg-elevated));
  color: var(--ts-accent);
  transform: translateX(2px);
}

:host-context(.text-white) .mega-panel {
  color: var(--text);
}

:host-context(.text-white) .mega-link {
  color: var(--text);
}

:host-context(.text-white) .mega-link:hover {
  background-color: color-mix(in srgb, var(--text) 12%, var(--bg-elevated));
}

// Smooth transitions for mega menu
.mega-menu-enter {
  opacity: 0;
  transform: translateY(-10px);
}

.mega-menu-enter-active {
  opacity: 1;
  transform: translateY(0);
  transition: all 200ms ease-out;
}

// Mobile drawer animation overrides
@media (max-width: 768px) {
  .mobile-drawer {
    transform: translateX(100%);
    transition: transform 300ms ease-out;
    
    &.open {
      transform: translateX(0);
    }
  }
}

// Logo transition
.logo-transition {
  transition: all 300ms ease-out;
}

// Enhanced hover effects for mega menu items
.mega-menu-item {
  transition: all 200ms ease-out;
  
  &:hover {
    color: var(--ts-accent);
    transform: translateX(4px);
  }
}

// Custom scrollbar for mobile drawer
.mobile-drawer {
  scrollbar-width: thin;
  scrollbar-color: var(--ts-line) transparent;
  
  &::-webkit-scrollbar {
    width: 4px;
  }
  
  &::-webkit-scrollbar-track {
    background: transparent;
  }
  
  &::-webkit-scrollbar-thumb {
    background: var(--ts-line);
    border-radius: 2px;
  }
}
.app-navbar {
  width: 100%;
  background: linear-gradient(180deg, rgba(10, 11, 13, 0.82) 0%, rgba(10, 11, 13, 0.74) 100%);
  backdrop-filter: saturate(160%) blur(22px);
  -webkit-backdrop-filter: saturate(160%) blur(22px);
  border-bottom: 1px solid rgba(255, 255, 255, 0.06);
  box-shadow: 0 24px 40px -28px rgba(0, 0, 0, 0.65);
}

.app-navbar__inner {
  height: 100%;
  width: min(1180px, 100% - clamp(1.5rem, 6vw, 2.75rem));
  margin: 0 auto;
  display: grid;
  grid-template-columns: auto 1fr auto;
  align-items: center;
  gap: clamp(0.75rem, 3vw, 2.25rem);
  position: relative;

  @media (max-width: 767px) {
    width: min(100%, 100% - clamp(1.1rem, 7vw, 1.9rem));
    gap: clamp(0.5rem, 4vw, 1rem);
    grid-template-columns: auto 1fr auto;
  }
}

.app-navbar__start,
.app-navbar__end {
  display: inline-flex;
  align-items: center;
  gap: clamp(0.55rem, 2vw, 1.05rem);
  position: relative;
  z-index: 1;
}

.app-navbar__start {
  justify-content: flex-start;
  gap: clamp(0.65rem, 2.5vw, 1.2rem);
}

.app-navbar__center {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  position: relative;
  z-index: 3;
  
  @media (max-width: 767px) {
    justify-content: center;
  }
  
  @media (min-width: 768px) {
    justify-content: flex-start;
  }
}

.app-navbar__end {
  justify-content: flex-end;
  gap: clamp(0.6rem, 2vw, 1.1rem);
}

.app-navbar__brand {
  display: inline-flex;
  align-items: center;
  gap: 0.75rem;
  padding: 0.35rem 0.55rem;
  border-radius: 999px;
  color: #f5f5f7;
  font-weight: 600;
  letter-spacing: 0.03em;
  transition: transform 0.2s ease, background-color 0.2s ease;

  &:hover {
    background-color: rgba(247, 147, 26, 0.08);
    transform: translateY(-1px);
  }

  img {
    box-shadow: 0 10px 30px -18px rgba(247, 147, 26, 0.6);
  }
}

.app-navbar__brand-text {
  font-size: 0.95rem;
  letter-spacing: 0.06em;
  text-transform: uppercase;
}

.app-navbar__links {
  display: none;
  align-items: center;
  justify-content: flex-start;
  gap: clamp(0.75rem, 2vw, 1.6rem);
  padding-inline: 0 0.5rem;
  white-space: nowrap;
  flex: 1;
  
  @media (min-width: 768px) {
    display: flex;
  }
}

.app-navbar__link {
  position: relative;
  padding: 0.35rem 0.85rem;
  font-size: 0.8rem;
  font-weight: 500;
  letter-spacing: 0.1em;
  text-transform: uppercase;
  color: rgba(245, 245, 247, 0.68);
  border-radius: 999px;
  background: transparent;
  transition: color 0.25s ease, background-color 0.25s ease, transform 0.25s ease;

  &::after {
    content: '';
    position: absolute;
    left: 0;
    right: 0;
    bottom: -0.45rem;
    height: 2px;
    background: linear-gradient(90deg, transparent, #f7931a, transparent);
    transform: scaleX(0);
    transform-origin: center;
    transition: transform 0.25s ease;
  }

  &:hover {
    color: #fefefe;
    background: rgba(255, 255, 255, 0.08);
    transform: translateY(-1px);

    &::after {
      transform: scaleX(1);
    }
  }

  &.active {
    color: #f7931a;
    background: rgba(247, 147, 26, 0.16);

    &::after {
      transform: scaleX(1);
      background: linear-gradient(90deg, rgba(247, 147, 26, 0) 0%, #f7931a 30%, #f7931a 70%, rgba(247, 147, 26, 0) 100%);
    }
  }
}

.app-navbar__actions {
  display: inline-flex;
  align-items: center;
  gap: clamp(0.55rem, 2vw, 1.1rem);
  justify-content: flex-end;
}

.app-navbar__language {
  display: inline-flex;
  align-items: center;
  gap: 0.4rem;
  padding: 0.2rem 0.6rem;
  border-radius: 999px;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.08);
  box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.05);
  transition: background-color 0.2s ease, border-color 0.2s ease;
}

.app-navbar__language:hover {
  background: rgba(255, 255, 255, 0.12);
  border-color: rgba(255, 255, 255, 0.18);
}

.app-navbar__social {
  display: inline-flex;
  align-items: center;
  gap: 0.45rem;
  padding: 0.2rem 0.55rem;
  border-radius: 999px;
  background: rgba(255, 255, 255, 0.04);
  border: 1px solid rgba(255, 255, 255, 0.06);
  box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.05);
}

.app-navbar__social-link {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 1.85rem;
  height: 1.85rem;
  border-radius: 999px;
  color: rgba(245, 245, 247, 0.7);
  transition: color 0.2s ease, background-color 0.2s ease, transform 0.2s ease;

  &:hover {
    color: #f5f5f7;
    background: rgba(247, 147, 26, 0.16);
    transform: translateY(-1px);
  }
}

.app-navbar__auth {
  padding: 0.35rem 0.85rem;
  font-size: 0.78rem;
  font-weight: 600;
  letter-spacing: 0.08em;
  text-transform: uppercase;
  color: rgba(245, 245, 247, 0.78);
  border-radius: 999px;
  border: 1px solid rgba(255, 255, 255, 0.08);
  transition: background-color 0.2s ease, color 0.2s ease, border-color 0.2s ease;

  &:hover {
    background: rgba(247, 147, 26, 0.12);
    border-color: rgba(247, 147, 26, 0.35);
    color: #f5f5f7;
  }
}

.app-navbar__menu {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 2.25rem;
  height: 2.25rem;
  border-radius: 0.9rem;
  border: 1px solid rgba(255, 255, 255, 0.08);
  background: rgba(255, 255, 255, 0.04);
  color: #f5f5f7;
  transition: background-color 0.2s ease, transform 0.2s ease, border-color 0.2s ease;

  @media (min-width: 768px) {
    display: none !important;
  }

  &:hover {
    background: rgba(247, 147, 26, 0.12);
    transform: translateY(-1px);
  }
  
  &.active,
  &:active {
    background: rgba(247, 147, 26, 0.2);
    border-color: rgba(247, 147, 26, 0.4);
    color: #f7931a;
  }
}

.app-navbar__cart {
  display: inline-flex;
  align-items: center;
}

:host ::ng-deep app-cart-button .cart-link {
  background: rgba(255, 255, 255, 0.05);
  border-color: rgba(255, 255, 255, 0.08);
  color: #f5f5f7;
}

:host ::ng-deep app-cart-button .cart-link:hover {
  background: rgba(255, 255, 255, 0.12);
  border-color: rgba(255, 255, 255, 0.18);
}

.app-navbar__profile-trigger {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0.25rem;
  border-radius: 999px;
  border: 1px solid rgba(255, 255, 255, 0.06);
  background: rgba(255, 255, 255, 0.05);
  transition: background-color 0.2s ease, transform 0.2s ease, border-color 0.2s ease;

  &:hover {
    background: rgba(247, 147, 26, 0.14);
    border-color: rgba(247, 147, 26, 0.35);
    transform: translateY(-1px);
  }
}

.app-navbar__avatar {
  width: 1.75rem;
  height: 1.75rem;
  border-radius: 50%;
  background: #f7931a;
  color: #0a0b0d;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 0.85rem;
  font-weight: 700;
  box-shadow: 0 12px 25px -18px rgba(247, 147, 26, 0.7);
}

.app-navbar__dropdown {
  position: absolute;
  right: 0;
  margin-top: 0.75rem;
  width: 16.5rem;
  background: rgba(22, 24, 29, 0.96);
  border: 1px solid rgba(247, 147, 26, 0.12);
  border-radius: 1.1rem;
  box-shadow: 0 32px 70px -28px rgba(0, 0, 0, 0.65);
  overflow: hidden;
  backdrop-filter: blur(28px);
  -webkit-backdrop-filter: blur(28px);
  z-index: 130;
}

.app-navbar__dropdown-header {
  padding: 0.95rem 1.1rem;
  border-bottom: 1px solid rgba(247, 147, 26, 0.12);
}

.app-navbar__dropdown-name {
  font-size: 0.9rem;
  font-weight: 600;
  color: #f5f5f7;
}

.app-navbar__dropdown-email {
  font-size: 0.72rem;
  color: rgba(209, 209, 214, 0.75);
  margin-top: 0.2rem;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.app-navbar__dropdown-body {
  padding: 0.5rem 0.4rem;
  display: grid;
  gap: 0.15rem;
}

.app-navbar__dropdown-link {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 0.55rem 0.9rem;
  border-radius: 0.85rem;
  font-size: 0.8rem;
  color: rgba(209, 209, 214, 0.88);
  transition: background-color 0.18s ease, color 0.18s ease, transform 0.18s ease;

  &:hover {
    background: rgba(247, 147, 26, 0.12);
    color: #f5f5f7;
    transform: translateX(3px);
  }
}

.app-navbar__dropdown-separator {
  height: 1px;
  margin: 0.4rem 0.75rem;
  background: linear-gradient(90deg, transparent, rgba(247, 147, 26, 0.35), transparent);
}

.app-navbar__dropdown-footer {
  padding: 0.55rem;
  border-top: 1px solid rgba(247, 147, 26, 0.12);
}

.app-navbar__dropdown-logout {
  width: 100%;
  display: inline-flex;
  align-items: center;
  justify-content: flex-start;
  gap: 0.75rem;
  padding: 0.55rem 0.9rem;
  border-radius: 0.85rem;
  font-size: 0.8rem;
  color: rgba(255, 99, 132, 0.82);
  transition: background-color 0.2s ease, transform 0.2s ease;

  &:hover {
    background: rgba(255, 99, 132, 0.16);
    transform: translateX(3px);
  }
}

@media (max-width: 768px) {
  .app-navbar__actions {
    gap: clamp(0.35rem, 4vw, 0.6rem);
  }

  .app-navbar__brand {
    padding: 0.25rem 0.45rem;
  }

  .app-navbar__brand img {
    height: 1.65rem;
    width: 1.65rem;
  }

  .app-navbar__avatar {
    width: 1.65rem;
    height: 1.65rem;
  }

  .app-navbar__menu {
    width: 2.55rem;
    height: 2.55rem;
  }

  .app-navbar__cart .cart-link {
    padding: 0.4rem 0.65rem;
  }
}

@media (max-width: 480px) {
  .app-navbar__actions {
    gap: 0.35rem;
  }

  .app-navbar__links {
    font-size: 0.78rem;
  }

  .app-navbar__brand img {
    height: 1.55rem;
    width: 1.55rem;
  }

  .app-navbar__avatar {
    width: 1.45rem;
    height: 1.45rem;
    font-size: 0.72rem;
  }

  .app-navbar__menu {
    width: 2.35rem;
    height: 2.35rem;
  }
}

// Mobile Drawer Responsive Styles
.mobile-drawer {
  display: block !important;
  background: yellow !important; // DEBUG
  border: 5px solid red !important; // DEBUG
  z-index: 9999 !important;
  box-shadow: -8px 0 32px rgba(0, 0, 0, 0.8);
  
  &.hidden {
    display: none !important;
  }
  
  @media (min-width: 768px) {
    display: none !important;
  }
  
  &__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.5rem;
    border-bottom: 1px solid rgba(247, 147, 26, 0.15);
    
    @media (max-width: 480px) {
      padding: 1.25rem;
    }
  }

  &__brand {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  &__logo {
    height: 2.5rem;
    width: 2.5rem;
    border-radius: 0.75rem;
    box-shadow: 0 4px 12px rgba(247, 147, 26, 0.3);
    
    @media (max-width: 480px) {
      height: 2.25rem;
      width: 2.25rem;
    }
  }

  &__title {
    font-family: "Playfair Display", serif;
    font-size: 1.25rem;
    font-weight: 600;
    color: #f5f5f7;
    
    @media (max-width: 480px) {
      font-size: 1.1rem;
    }
  }

  &__close {
    padding: 0.5rem;
    border-radius: 0.75rem;
    transition: background-color 0.2s ease;
    color: rgba(245, 245, 247, 0.7);

    &:hover {
      background-color: rgba(247, 147, 26, 0.15);
      color: #f5f5f7;
    }
  }

  &__nav {
    padding: 1.5rem;
    
    @media (max-width: 480px) {
      padding: 1.25rem;
    }
  }

  &__links {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  &__link {
    font-size: 1.125rem;
    font-weight: 500;
    color: rgba(245, 245, 247, 0.85);
    padding: 0.75rem 1rem;
    border-radius: 0.75rem;
    transition: all 0.2s ease;

    &:hover {
      background-color: rgba(247, 147, 26, 0.12);
      color: #f7931a;
      transform: translateX(4px);
    }
    
    @media (max-width: 480px) {
      font-size: 1rem;
      padding: 0.65rem 0.875rem;
    }
  }

  &__section {
    padding-top: 1rem;
    margin-top: 1rem;
    border-top: 1px solid rgba(247, 147, 26, 0.15);
  }

  &__section-title {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: rgba(209, 209, 214, 0.6);
    margin-bottom: 0.75rem;
  }

  &__user-actions {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  &__user-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    border-radius: 0.75rem;
    font-size: 1rem;
    font-weight: 500;
    color: rgba(245, 245, 247, 0.85);
    transition: all 0.2s ease;

    &:hover {
      background-color: rgba(247, 147, 26, 0.12);
      color: #f7931a;
      transform: translateX(4px);
    }

    svg {
      width: 1.25rem;
      height: 1.25rem;
      flex-shrink: 0;
      color: rgba(247, 147, 26, 0.8);
    }
    
    @media (max-width: 480px) {
      font-size: 0.95rem;
      padding: 0.65rem 0.875rem;
      
      svg {
        width: 1.125rem;
        height: 1.125rem;
      }
    }
  }

  &__logout {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    width: 100%;
    padding: 0.75rem 1rem;
    border-radius: 0.75rem;
    font-size: 1rem;
    font-weight: 500;
    color: rgba(255, 99, 132, 0.9);
    background-color: transparent;
    border: none;
    text-align: left;
    transition: all 0.2s ease;
    cursor: pointer;

    &:hover {
      background-color: rgba(255, 99, 132, 0.15);
      transform: translateX(4px);
    }

    svg {
      width: 1.25rem;
      height: 1.25rem;
      flex-shrink: 0;
    }
    
    @media (max-width: 480px) {
      font-size: 0.95rem;
      padding: 0.65rem 0.875rem;
      
      svg {
        width: 1.125rem;
        height: 1.125rem;
      }
    }
  }

  &__auth-buttons {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  &__login-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    padding: 0.875rem 1.5rem;
    border-radius: 0.75rem;
    font-size: 1rem;
    font-weight: 600;
    color: #0a0b0d;
    background: linear-gradient(135deg, #f7931a 0%, #f7931a 100%);
    box-shadow: 0 4px 12px rgba(247, 147, 26, 0.4);
    transition: all 0.2s ease;

    &:hover {
      transform: translateY(-1px);
      box-shadow: 0 6px 16px rgba(247, 147, 26, 0.5);
    }
    
    @media (max-width: 480px) {
      padding: 0.75rem 1.25rem;
      font-size: 0.95rem;
    }
  }

  &__register-btn {
    display: block;
    text-align: center;
    padding: 0.875rem 1.5rem;
    border-radius: 0.75rem;
    font-size: 1rem;
    font-weight: 500;
    color: rgba(245, 245, 247, 0.85);
    background-color: transparent;
    border: 1px solid rgba(247, 147, 26, 0.3);
    transition: all 0.2s ease;

    &:hover {
      background-color: rgba(247, 147, 26, 0.1);
      border-color: rgba(247, 147, 26, 0.5);
      color: #f5f5f7;
    }
    
    @media (max-width: 480px) {
      padding: 0.75rem 1.25rem;
      font-size: 0.95rem;
    }
  }
}

// Overlay improvements for mobile
.modal-overlay {
  display: block !important;
  backdrop-filter: blur(4px);
  -webkit-backdrop-filter: blur(4px);
  background: rgba(0, 0, 0, 0.75);
  z-index: 9998 !important;
  
  &.hidden {
    display: none !important;
  }
  
  @media (min-width: 768px) {
    display: none !important;
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideInFromRight {
  from {
    transform: translateX(100%);
  }
  to {
    transform: translateX(0);
  }
}

// Ensure mobile menu is accessible
@media (max-width: 767px) {
  .app-navbar__profile {
    display: none !important;
  }
  
  .app-navbar__social,
  .app-navbar__language {
    display: none !important;
  }
  
  .app-navbar__auth {
    display: none !important;
  }
  
  .app-navbar__menu {
    display: inline-flex !important;
  }
}

// Tablet adjustments
@media (min-width: 768px) and (max-width: 1023px) {
  .app-navbar__social {
    display: none !important;
  }
  
  .app-navbar__language {
    display: none !important;
  }
}
