rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Publicly readable images in /public/**
    match /public/{allPaths=**} {
      allow read;                       // anyone can view images
      allow write: if request.auth != null;  // only signed-in users can upload/delete
    }

    // Everything else locked down by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}