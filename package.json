{
  "name": "tstone-web",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "npm run template:sync && ng serve",
    "build": "npm run template:sync && ng build",
    "watch": "ng build --watch --configuration development",
    "test": "npm run template:sync && ng test",
    "test:guards": "ng test --watch=false --include=\"src/app/guards/**/*.spec.ts\"",
    "serve:ssr:tstone-web": "node dist/tstone-web/server/server.mjs",
    "deploy": "npm run build && npx firebase deploy --only hosting",
    "lint:styles": "stylelint \"src/**/*.{css,scss}\"",
    "seed:templates": "tsx scripts/seed-templates.ts",
    "seed:tags": "tsx scripts/seed-tags.ts",
    "seed:solo-miners": "tsx scripts/seed-solo-miners.ts",
    "template:sync": "tsx scripts/sync-brand-config.ts && tsx scripts/sync-backend-flags.ts"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "overrides": {
    "firebase": "11.10.0"
  },
  "dependencies": {
    "@angular/animations": "^20.3.4",
    "@angular/common": "20.3.4",
    "@angular/compiler": "20.3.4",
    "@angular/core": "20.3.4",
    "@angular/fire": "^20.0.1",
    "@angular/forms": "20.3.4",
    "@angular/platform-browser": "20.3.4",
    "@angular/platform-browser-dynamic": "20.3.4",
    "@angular/platform-server": "20.3.4",
    "@angular/router": "20.3.4",
    "@angular/ssr": "20.3.4",
    "@ngneat/tailwind": "^7.0.3",
    "@ngx-translate/core": "^17.0.0",
    "@ngx-translate/http-loader": "^17.0.0",
    "@stripe/stripe-js": "^8.0.0",
    "express": "^5.1.0",
    "firebase": "11.10.0",
    "jspdf": "^3.0.3",
    "libphonenumber-js": "^1.12.24",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "20.3.4",
    "@angular/cli": "20.3.4",
    "@angular/compiler-cli": "20.3.4",
    "@types/express": "^5.0.1",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^20.17.19",
    "autoprefixer": "^10.4.21",
    "dotenv": "^16.4.5",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "postcss": "^8.5.6",
    "stylelint": "^16.9.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-config-standard-scss": "^13.0.0",
    "stylelint-scss": "^6.1.0",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.20.6",
    "typescript": "~5.9.2"
  }
}
